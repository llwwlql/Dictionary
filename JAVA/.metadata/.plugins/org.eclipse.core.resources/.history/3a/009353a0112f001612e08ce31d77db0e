	public void make_panel()
	{//按钮栏
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);
		contentPane.setLayout(null);
		JPanel panel = new JPanel();
		panel.setBackground(Color.MAGENTA);
		panel.setBounds(0, 0, 160, 561);
		contentPane.add(panel);
		panel.setLayout(null);
		
		JButton button_1 = new JButton("词典");
		button_1.setBounds(10, 138, 139, 47);
		panel.add(button_1);
		
		JButton button_2 = new JButton("单词本");
		button_2.setBounds(10, 208, 139, 47);
		panel.add(button_2);
		
		JButton button_3 = new JButton("每日一文");
		button_3.setBounds(10, 277, 139, 47);
		panel.add(button_3);
		
	}
	
